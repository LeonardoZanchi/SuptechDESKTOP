<?xml version="1.0" encoding="UTF-8"?>

<!-- ===========================================
     MENU CARD COMPONENT - Componente Card do Menu
     ===========================================
     Este arquivo define um componente reutilizável para os cards
     do menu principal. É usado como template base para criar
     cards funcionais no MenuGrid.
     Responsabilidades:
     - Estrutura básica de um card com ícone, título e descrição
     - Layout vertical centralizado
     - Aplicação de estilos CSS para aparência visual
     - Possibilidade de customização via fx:id nos labels
     - Reutilização em diferentes contextos do menu

     Estrutura do Card:
     - Ícone: Label com classe card-icon (pode ser customizado)
     - Título: Label com classe card-title (pode ser customizado)
     - Descrição: Label com classe card-description (pode ser customizado)

     Nota: Este componente não tem controller próprio, sendo
     controlado pelo componente pai (MenuGridController).
     =========================================== -->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- ===========================================
     CONTAINER DO CARD - VBox com layout vertical
     =========================================== -->
<VBox xmlns:fx="http://javafx.com/fxml"
      styleClass="menu-card"
      spacing="15"
      alignment="CENTER">
    <!-- Padding interno para espaçamento do conteúdo -->
    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <!-- ===========================================
         ÍCONE DO CARD - fx:id permite customização dinâmica
         =========================================== -->
    <Label fx:id="lblIcon" styleClass="card-icon"/>

    <!-- ===========================================
         TÍTULO DO CARD - fx:id permite customização dinâmica
         =========================================== -->
    <Label fx:id="lblTitle" styleClass="card-title"/>

    <!-- ===========================================
         DESCRIÇÃO DO CARD - fx:id permite customização dinâmica
         ===========================================
         wrapText="true" permite quebra de linha automática
         textAlignment="CENTER" centraliza o texto
         =========================================== -->
    <Label fx:id="lblDescription" styleClass="card-description"
           wrapText="true" textAlignment="CENTER"/>
</VBox>

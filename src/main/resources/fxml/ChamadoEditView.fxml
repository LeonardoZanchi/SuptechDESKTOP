<?xml version="1.0" encoding="UTF-8"?>

<!-- ==================================================
         CHAMADO EDIT VIEW - Tela de Edição de Chamados
         ==================================================
         Este FXML define a interface para editar um chamado existente.

         Responsabilidade:
         - Exibir campos do chamado (título, prioridade, status, descrição)
         - Mostrar informações do usuário que abriu o chamado
         - Permitir salvar ou cancelar alterações

         Controller: br.com.suptec.controllers.ChamadoEditController
         Elementos importantes (fx:id):
         - txtTitulo, txtDescricao : campos de edição do chamado
         - cmbPrioridade, cmbStatus : ComboBoxes para selecionar prioridade/status
         - lblDataAbertura, lblNomeUsuario, lblEmailUsuario, lblSetorUsuario : Labels informativos
         - Botões: handleSalvar (salva), handleCancelar (fecha sem salvar)

         Observações:
         - O layout usa um BorderPane com ScrollPane central para acomodar formulários
             mais longos sem quebrar o layout.
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
                        xmlns:fx="http://javafx.com/fxml"
                        fx:controller="br.com.suptec.controllers.ChamadoEditController"
                        styleClass="user-edit-container"
                        stylesheets="@../css/main.css"
                        prefWidth="800"
                        prefHeight="700">

    <top>
        <VBox styleClass="header-container">
            <Label text="Editar Chamado" styleClass="page-title"/>
            <Label fx:id="lblSubtitulo" text="Modificar informações do chamado selecionado" styleClass="page-subtitle"/>
            <Separator styleClass="separator"/>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane">
            <VBox spacing="20" styleClass="form-container">

                <VBox spacing="12" styleClass="form-section">
                    <Label text="INFORMAÇÕES DO CHAMADO" styleClass="section-title"/>

                    <VBox spacing="8">
                        <Label text="Titulo *" styleClass="form-label"/>
                        <TextField fx:id="txtTitulo" promptText="Digite o título do chamado" styleClass="form-input"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Prioridade *" styleClass="form-label"/>
                        <ComboBox fx:id="cmbPrioridade" promptText="Selecione prioridade" styleClass="form-input" maxWidth="Infinity"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Status" styleClass="form-label"/>
                        <Label fx:id="lblStatus" text="N/A" styleClass="form-input"/>
                        <Label text="O status nao pode ser alterado manualmente" styleClass="hint-text"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Tecnico Responsavel" styleClass="form-label"/>
                        <ComboBox fx:id="cmbTecnicoResponsavel" promptText="Selecione o tecnico" styleClass="form-input" maxWidth="Infinity"/>
                        <Label text="Escolha o tecnico que ficara responsavel por este chamado" styleClass="hint-text"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Data de Abertura" styleClass="form-label"/>
                        <Label fx:id="lblDataAbertura" text="N/A" styleClass="form-input"/>
                    </VBox>
                </VBox>

                <Separator styleClass="form-separator"/>

                <VBox spacing="12" styleClass="form-section">
                    <Label text="USUÁRIO" styleClass="section-title"/>

                    <HBox spacing="20">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Nome" styleClass="form-label"/>
                            <Label fx:id="lblNomeUsuario" text="N/A" styleClass="form-input"/>
                        </VBox>

                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label text="Email" styleClass="form-label"/>
                            <Label fx:id="lblEmailUsuario" text="N/A" styleClass="form-input"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="8">
                        <Label text="Setor" styleClass="form-label"/>
                        <Label fx:id="lblSetorUsuario" text="N/A" styleClass="form-input"/>
                    </VBox>
                </VBox>

                <Separator styleClass="form-separator"/>

                <VBox spacing="12" styleClass="form-section">
                    <Label text="DESCRICAO" styleClass="section-title"/>
                    <TextArea fx:id="txtDescricao" promptText="Descreva o problema ou solicitacao" styleClass="form-input" prefRowCount="6" wrapText="true"/>
                </VBox>

                <Separator styleClass="form-separator"/>

                <VBox spacing="12" styleClass="form-section">
                    <Label text="RESPOSTA DO TECNICO" styleClass="section-title"/>
                    <TextArea fx:id="txtRespostaDoTecnico" promptText="Resposta do tecnico" styleClass="form-input" prefRowCount="4" wrapText="true" editable="true"/>
                    <Label text="Este campo pode ser editado para adicionar ou atualizar a resposta do tecnico." styleClass="hint-text"/>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="8" styleClass="required-note">
                    <padding>
                        <Insets top="8"/>
                    </padding>
                    <Label text="*" styleClass="required-asterisk"/>
                    <Label text="Campos obrigatórios" styleClass="hint-text"/>
                </HBox>

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER" styleClass="button-container">
            <Button text="Salvar" onAction="#handleSalvar" styleClass="btn-secondary" prefWidth="150"/>
            <Button text="Cancelar" onAction="#handleCancelar" styleClass="btn-secondary" prefWidth="150"/>
        </HBox>
    </bottom>

</BorderPane>
